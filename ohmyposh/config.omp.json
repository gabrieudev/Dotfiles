{
  "Created": "Phunt_Vieg_ (verde-vermelho-preto)",
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#E0E0E0",
    "black": "#1A1B26",
    "gray": "#2E2E2E",
    "green": "#9ECE6A",
    "green_dark": "#7AA657",
    "cian": "#20dba3",
    "red": "#F7768E",
    "red_dark": "#C94F6D"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:white",
          "style": "plain",
          "template": "\u256d\u2500",
          "type": "text"
        },
        {
          "background": "p:cian",
          "foreground": "p:black",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " {{ .UserName }} ",
          "trailing_diamond": "\ue0b0",
          "type": "session"
        },
        {
          "background": "p:gray",
          "foreground": "p:white",
          "properties": {
            "style": "full"
          },
          "style": "diamond",
          "template": " \uf114  {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },
        {
          "background": "p:red",
          "foreground": "p:black",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": " \ue725({{ .UpstreamIcon }} {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
          "trailing_diamond": "\ue0b0",
          "type": "git"
        },
        {
          "background": "p:green_dark",
          "foreground": "p:black",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": "{{ if ne (.Segments.Contains \"Git\") true }} \uf017  {{ .CurrentDate | date .Format }} {{ end }}",
          "trailing_diamond": "\ue0b0",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:white",
          "style": "plain",
          "template": "\u2570\u2500<p:green>\u26a1</>",
          "type": "text"
        }
      ]
    }
  ],
  "transient_prompt": {
    "template": "<p:red_dark>\uf489 </><p:gray>\uf0da</><p:green_dark>\uf105</> "
  },
  "final_space": true,
  "version": 7
}
